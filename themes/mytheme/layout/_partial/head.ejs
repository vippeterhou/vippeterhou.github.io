<%# load css %>
<% if (theme.stylesheets !== undefined && theme.stylesheets.length > 0) { %>
      <% theme.stylesheets.forEach(url => { %>
            <link rel="stylesheet" href="<%= url_for(url) %>">
      <% }); %>
<% } %>

<%# load javascript %>
<script src="<%- url_for(theme.scripts[0]) %>"></script>
<% if (is_home()) { %>
      <script src="<%- url_for(theme.scripts[1]) %>"></script>
<% } else { %>
      <script src="<%- url_for(theme.scripts[2]) %>"></script>
<% } %>