<% var title = "Undefined"; %>
<% if (is_home()) { %>
<% title = "Homepage" %>
<% } else if (is_page()) { %>
<% title = page.title %>
<% } else if (is_post()) { %>
<% title = page.title %>
<% console.log(page.title) %>
<% } %>
<title> Peter Hou | <%- title %> </title>

<link rel="icon" type="image/svg" href="/image/logo.svg">

